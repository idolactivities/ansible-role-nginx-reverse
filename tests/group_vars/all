---
ansible_ssh_user: root

nginx_reverse_endpoints:
  - name: test-http
    domains:
      - http-service.local
      - "{{ inventory_hostname }}"
    backends:
      - 10.0.3.1:3000
  - name: test-https
    ssl_certificate: "{{ lookup('file', ssl_host_cert_path) }}"
    ssl_certificate_key: "{{ lookup('file', ssl_host_key_path) }}"
    ssl_redirect: false
    domains:
      - https-service.local
      - "{{ inventory_hostname }}"
    backends:
      - 10.0.3.1:3000
  - name: test-https-with-directives
    ssl_certificate: "{{ lookup('file', ssl_host_cert_path) }}"
    ssl_certificate_key: "{{ lookup('file', ssl_host_key_path) }}"
    directives:
      - client_max_body_size 10m
    locations:
      "= /favicon.ico":
        - access_log off
        - log_not_found off
      /robots.txt:
        - access_log off
        - log_not_found off
    domains:
      - https-service-with-directives.local
    backend_protocol: https
    backends:
      - "{{ inventory_hostname }}:443"

